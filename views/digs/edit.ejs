<% include ../partials/header %>

<div class="container">
	<h1 style="text-align: center;">Edit <%= dig.name %> </h1>
	<div style="width: 30%; margin: 35px auto;">

		<form action='/digs/<%= dig._id %>?_method=PUT' method="POST">
			<div class="form-group">
				<input class='form-control' type="text" name='dig[name]' value='<%= dig.name %>'>	
			</div>
			<div class="form-group">
				<input class='form-control' type="text" name='dig[image]' value='<%= dig.image %>'>	
			</div>
			<div class="form-group">
				<input class='form-control' type="text" name='dig[description]' value='<%= dig.description %>'>	
			</div>
			<div class="form-group">
				<button class='btn btn-lg btn-success btn-block'>Submit</button>
			</div>
		</form>
		<a href="/digs">Go back</a>
	</div>	
</div>
<% include ../partials/footer %>