<% include ../partials/header %>

<div class="container">
	<h1 style="text-align: center;">
		Edit comment
	</h1>
	
	<div style="width: 30%; margin: 35px auto;">

		<form action="/digs/<%= dig_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class='form-control' type="text" name='comment[text]' value='<%= comment.text %>'>	
			</div>
		
		
			<div class="form-group">
				<button class='btn btn-lg btn-success btn-block'>Submit
				</button>
			</div>
		</form>
		<a href="/digs">Go back</a>
	</div>	
</div>
<% include ../partials/footer %>